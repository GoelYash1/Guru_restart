<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#416D47"
    tools:context=".activity.RegisterActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/RegisterViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/register_bg"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/image_login"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/register_image"
        android:layout_marginBottom="405dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/RegisterViewPager" />

    <TextView
        android:id="@+id/text_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Create Account"
        android:textAlignment="center"
        android:textColor="@color/custom_color_bg"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/RegisterViewPager"
        app:layout_constraintTop_toBottomOf="@+id/image_login" />

    <EditText
        android:id="@+id/input_username"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rectangular_input_bg"
        android:ems="10"
        android:hint="Name"
        android:textColorHint="@color/edit_input"
        android:elegantTextHeight="true"
        android:inputType="textPersonName"
        android:textColor="@color/custom_color_bg"
        android:textSize="16sp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        tools:ignore="TouchTargetSizeCheck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_register" />
    <EditText
        android:id="@+id/input_email"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rectangular_input_bg"
        android:elegantTextHeight="true"
        android:ems="10"
        android:hint="Email Id"
        android:inputType="textEmailAddress"
        android:textColor="@color/custom_color_bg"
        android:textColorHint="@color/edit_input"
        android:textSize="16sp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        tools:ignore="TouchTargetSizeCheck"
        app:layout_constraintEnd_toEndOf="@+id/input_username"
        app:layout_constraintStart_toStartOf="@+id/input_username"
        app:layout_constraintTop_toBottomOf="@+id/input_username"

        />

    <EditText
        android:id="@+id/input_number"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rectangular_input_bg"
        android:elegantTextHeight="true"
        android:ems="10"
        android:hint="Number"
        android:inputType="text|number"
        android:textColor="@color/custom_color_bg"
        android:textColorHint="@color/edit_input"
        android:textSize="16sp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        tools:ignore="TouchTargetSizeCheck"
        app:layout_constraintEnd_toEndOf="@+id/input_email"
        app:layout_constraintStart_toStartOf="@+id/input_email"
        app:layout_constraintTop_toBottomOf="@+id/input_email"
        />
    <EditText
        android:id="@+id/input_password"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rectangular_input_bg"
        android:elegantTextHeight="true"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/custom_color_bg"
        android:textColorHint="@color/edit_input"
        android:textSize="16sp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        tools:ignore="TouchTargetSizeCheck"
        app:layout_constraintEnd_toEndOf="@+id/input_number"
        app:layout_constraintStart_toStartOf="@+id/input_number"
        app:layout_constraintTop_toBottomOf="@+id/input_number"
        />
    <EditText
        android:id="@+id/input_description"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rectangular_input_bg"
        android:elegantTextHeight="true"
        android:ems="10"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:textColor="@color/custom_color_bg"
        android:textColorHint="@color/edit_input"
        android:textSize="16sp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        tools:ignore="TouchTargetSizeCheck"
        app:layout_constraintEnd_toEndOf="@+id/input_password"
        app:layout_constraintStart_toStartOf="@+id/input_password"
        app:layout_constraintTop_toBottomOf="@+id/input_password"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/click_btn_bg"
        android:backgroundTint="@color/custom_color_bg"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:text="Create"
        android:textSize="25sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/input_description"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/input_description"
        app:layout_constraintTop_toBottomOf="@+id/input_description" />
    <TextView
        android:id="@+id/text_signIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Sign In"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/custom_color_bg"
        app:layout_constraintEnd_toEndOf="@+id/btn_create"
        app:layout_constraintStart_toStartOf="@+id/btn_create"
        app:layout_constraintTop_toBottomOf="@+id/btn_create" />


</androidx.constraintlayout.widget.ConstraintLayout>